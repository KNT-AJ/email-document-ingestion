# Gmail API Authentication Configuration
# Copy this file to .env and fill in your actual values

# Google OAuth2 Configuration
GOOGLE_CLIENT_SECRETS_FILE=client_secret.json
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Token Storage Configuration
TOKEN_STORAGE_TYPE=file
TOKEN_STORAGE_DIR=.tokens
TOKEN_ENCRYPTION_KEY=generate-a-secure-32-byte-key-or-use-env-var

# Application Configuration
APP_NAME=data_ingest
DEBUG=true
API_PREFIX=/api
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/data_ingest

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO